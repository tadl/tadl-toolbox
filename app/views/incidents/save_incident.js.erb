<% if @from == 'form_with_patron' %>
  $("#incident_portion").html("<%= escape_javascript(render 'incident_stub', i: @incident) %>")
  $("#patron_portion").append('<%= escape_javascript(render "form_patron_portion", patron: Patron.new) %>')
<% elsif @from == 'form_no_patron' %>
  $("#incident_portion").html("<%= escape_javascript(render 'incident_stub', i: @incident) %>")
<% end %>