<%= render 'incidents_menu' %>
<h4>New Incident</h4>
<div id="incident_portion">
  <div id="incident_details">
    <%= render 'incident_form', incident: @incident %>
  </div>
  <div id="violation_portion">
  </div>
  <div id="patron_portion">
    <div id="new_patron_form">
    </div>
    <div id="patron_search" style="display:none">
      <%= render 'patron_search_form' %>
    </div>
  </div>
