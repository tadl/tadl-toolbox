<p id="notice"><%= notice %></p>

<h2>Types of Stats</h2>
<%= link_to 'Create New Stat Type', new_stat_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Group name</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.code %></td>
        <td><%= stat.name %></td>
        <td><%= stat.group_name %></td>
        <td><%= stat.start_date %></td>
        <td><%= stat.end_date %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

