{
    "name": "tadl-toolbox",
    "description": "A toolbox for tadl apps",
    "website": "https://www.tadl.org/",
    "require": {
        "plugins": [
            {
                "name": "postgres",
                "commands": ["postgres:create postgres-$APP", "postgres:link postgres-$APP $APP"]
            }, {
                "name": "memcached",
                "commands": ["memcached:create memcached-$APP", "memcached:link memcached-$APP $APP"]
            }, {
                "name": "redis",
                "commands": ["redis:create redis-$APP", "redis:link redis-$APP $APP"]
            }
        ],
        "volumes":[
            {"host":"/srv/toolbox","app":"/srv/toolbox"}
        ]
    }
}
